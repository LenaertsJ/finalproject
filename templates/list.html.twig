//template voor gebruik bij AssociationField in crud controller met differentiaties naargelang de entity.

<ul class="form-widget" style="list-style-type: none;">
    {% for item in field.value %}
        {% if item.product is defined %}
            <li>{{ item.product }}</li>
        {% elseif item.street is defined %}
            <li>{{ item.firstname }} {{ item.lastname }}<br>{{ item.street }} {{ item.housenumber }}, {{ item.postalCode }} {{ item.city }} | {{ item.country }}</li>
        {% else %}
            <li>{{ item.name }}</li>
        {% endif %}
    {% endfor %}
</ul>
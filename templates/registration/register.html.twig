{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="img-container img-container-register"><img class="register" src={{ asset("resources/images/logo-herborist.svg") }} /></div>
<div class="container">
    <h1 class="title">Register</h1>
    <div class="form-wrapper">
    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.email, {'attr' : {'class' : 'input-field'}}) }}

        {{ form_row(registrationForm.firstname, {'attr' : {'class' : 'input-field'}}) }}

        {{ form_row(registrationForm.lastname, {'attr' : {'class' : 'input-field'}}) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password', 'attr' : {'class' : 'input-field'}
        }) }}

        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}

